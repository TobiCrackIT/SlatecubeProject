<% include ../partials/header %>
<div class="row">
  <div class="container">
    <h1 style="text-align:center";>Edit Post</h1>
    <div style="width: 30%; margin: 25px auto";>
      <form action="/posts/<%= post._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="post[title]" value="<%= post.title %>">
        </div>

        <div class="form-group">
            <input class="form-control" type="text" name="post[message]" value="<%= post.message %>">
        </div>

        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Update</button>
        </div>      
      </form>
      <a href="/posts">Go Back</a>
    </div>
                  
  </div>
        
</div>

        

<% include ../partials/footer %>

