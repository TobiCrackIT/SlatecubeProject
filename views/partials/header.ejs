<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-gradient">
        <a class="brand-nav btn-xs navbar-brand" href="/posts">FriendsMeet</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav  ml-auto">

            <% if(!currentUser){ %>
            <a class=" mynavs nav-item nav-link btn btn-xs  mr-4" href="/login">Login</a>
            <a class=" mynavs nav-item nav-link  btn btn-xs" href="/register">Sign Up</a>
            <% } else { %>

             <li class=" mynavs nav-item nav-link  btn btn-xs"><i>Welcome <%= currentUser.username %></i></li>
            <a class=" mynavs nav-item nav-link  btn btn-xs" href="/logout">Logout</a>
            <% } %>
          </div>
        </div>
      </nav>
         
      
      <% if( errormsg ){ %>
        <div class="container alert alert-danger alert-dismissible fade show" role="alert">
            <strong><h6> <%=errormsg%> </h6> </strong> 
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
      <% } %>
      
      </div>

      
      